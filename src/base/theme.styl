.theme

  mods('color', 'project-default' 'project-brand' 'project-inverse' 'megafon-brand' 'project-warning')

  +m('size', 'default')
    --text-size-s 7px
    --text-size-m 8px
    --text-size-l 10px
    --text-size-xl 11px
    --text-size-xxl 13px
    --line-height-s 18px
    --line-height-m 21px
    --line-height-l 25px
    --line-height-xl 28px
    --line-height-xxl 34px

  +m('space', 'default')
    --space-xxxs 2px
    --space-xxs 4px
    --space-xs 8px
    --space-s 12px
    --space-m 16px
    --space-l 20px
    --space-xl 24px
    --space-xxl 32px
    --space-xxxl 40px
    --space-xxxxl 48px
    --space-xxxxxl 72px

  +m('gap', 'small')
    --gap var(--space-xxxl)
    @media (max-width: 1144px)
      --gap var(--space-m)

*
  box-sizing border-box
