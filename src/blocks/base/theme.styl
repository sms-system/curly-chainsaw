.theme
  default-sizes =
    +cache('default-sizes')
      --text-size-s 7px
      --text-size-m 8px
      --text-size-l 10px
      --text-size-xl 11px
      --text-size-xxl 13px
      --line-height-s 18px
      --line-height-m 21px
      --line-height-l 25px
      --line-height-xl 28px
      --line-height-xxl 34px

  default-spaces =
    --space-xxxs 2px
    --space-xxs 4px
    --space-xs 8px
    --space-s 12px
    --space-m 16px
    --space-l 20px
    --space-xl 24px
    --space-xxl 32px
    --space-xxxl 40px
    --space-xxxxl 48px
    --space-xxxxxl 72px

  / :root
    {default-sizes}
    {default-spaces}

  +m('color')
    +m('project-default')
      --bg-color-default #FFFFFF
      --bg-color-accent #0056B3
      --bg-color-border #000000
      --text-color-primary #000000
      --text-color-secondary rgba(0, 0, 0, 0.6)
      --text-color-ghost rgba(0, 0, 0, 0.3)
      --text-color-link #0070f0
    +m('project-brand')
      --bg-color-default #0070f0
      --bg-color-accent #FFFFFF
      --bg-color-border #FFFFFF
      --text-color-primary #FFFFFF
      --text-color-secondary rgba(255, 255, 255, 0.6)
      --text-color-ghost rgba(255, 255, 255, 0.3)
      --text-color-link #FFFFFF
    +m('project-inverse')
      --bg-color-default #000000
      --bg-color-accent #FFFFFF
      --bg-color-border #FFFFFF
      --text-color-primary #FFFFFF
      --text-color-secondary rgba(255, 255, 255, 0.6)
      --text-color-ghost rgba(255, 255, 255, 0.3)
      --text-color-link #0070f0
    +m('project-warning')
      --bg-color-default #FF9900
      --bg-color-accent #FFFFFF
      --bg-color-border #FFFFFF
      --text-color-primary #FFFFFF
      --text-color-secondary rgba(255, 255, 255, 0.6)
      --text-color-ghost rgba(255, 255, 255, 0.3)
      --text-color-link #FFF
    +m('megafon-brand')
      --bg-color-default #1FA55D
      --bg-color-accent #FFFFFF
      --bg-color-border #FFFFFF
      --text-color-primary #FFFFFF
      --text-color-secondary rgba(255, 255, 255, 0.6)
      --text-color-ghost rgba(255, 255, 255, 0.3)
      --text-color-link #FFF

  +m('size', 'default')
    {default-sizes}
  
  +m('space', 'default')
    {default-spaces}
     
  +m('gap', 'small')
    --gap var(--space-xxxl)
  
  / *
    box-sizing border-box