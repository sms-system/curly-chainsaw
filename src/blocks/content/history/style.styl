.history
  border-width 3px
  // -- FIXES ---
  +e('time')
    {flex-column}
    mixmod('vertical-align', 'center', 'column-')

  +e('details')
    display flex
    flex-grow 1
    mixmod('vertical-align', 'center')

  +e('description')
    .text
      width 100%

  +e('hide')
    display none

  +e('show')
    margin-bottom 4px
    .text
      position relative
      top 2px

  +b('list', 'item')
    +m('indent-t', 'm')
      margin-top 16px
      &:first-child
        margin-top 0
